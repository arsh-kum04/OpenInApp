<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@color/white"
            >
            <ImageView
                android:id="@+id/item_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="14dp"
                android:src="@drawable/item_img"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_tv"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/click_num"
                android:layout_toEndOf="@+id/item_iv"
                android:layout_marginBottom="2dp"
                android:ellipsize="end"
                android:fontFamily="@font/figtree_regular"
                android:textColor="@color/black"
                android:text="Sample Link Name"
                />
            <TextView
                android:id="@+id/click_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="2dp"
                android:ellipsize="end"
                android:fontFamily="@font/figtree_regular"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="2323" />
            <TextView
                android:id="@+id/dates_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_tv"
                android:layout_alignBottom="@+id/item_iv"
                android:layout_toStartOf="@+id/click_num"
                android:layout_toEndOf="@id/item_iv"
                android:ellipsize="end"
                android:fontFamily="@font/figtree_regular"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:text="22 Aug 2022" />
            <TextView
                android:id="@+id/tvClicks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/click_num"
                android:layout_alignBottom="@+id/item_iv"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="18dp"
                android:ellipsize="end"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/figtree_regular"
                android:text="Clicks"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tvLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_iv"
            android:background="@drawable/dotted_blue_box"
            android:ellipsize="end"
            android:fontFamily="@font/figtree_regular"
            android:maxLength="50"
            android:padding="8dp"
            android:textColor="@color/blue"
            android:textSize="12sp"
            android:text="https://samplelink.oia.bio/ashd..."
            app:drawableEndCompat="@drawable/link_copy_img" />
    </LinearLayout>

</androidx.cardview.widget.CardView>