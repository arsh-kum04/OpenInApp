<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="120dp"
    app:cardCornerRadius="20dp"
    android:elevation="40dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/source_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:src="@drawable/source_icon" />

        <TextView
            android:id="@+id/source_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/source_icon"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/figtree_semibold"
            android:text="@string/instagram"


            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/source_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/source_tv1"
            android:ellipsize="end"
            android:fontFamily="@font/figtree_regular"
            android:text="@string/top_source"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="12sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
